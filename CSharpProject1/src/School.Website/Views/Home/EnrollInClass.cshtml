@model School.Website.Models.EnrollViewModel

@{
    ViewData["Title"] = "Enroll";
}
<h1>Enroll In Class.</h1>

<hr />
<form id="formEnroll" asp-action="EnrollInClass">
    <div class="form-group">
        <label asp-for="ClassListSL" class="control-label"></label>
        <select asp-for="ClassListSL" class="form-control classDropDown"
                asp-items="@Model.ClassListSL">
            <option value="">-- Select a Class --</option>
        </select>
        <span asp-validation-for="ClassListSL" class="text-danger" />
    </div>
    <div class="form-group">
        <input type="submit" id="addClass" value="Enroll" class="btn btn-primary" />
    </div>
</form>

<script src="https://code.jquery.com/jquery-1.12.4.min.js"
        integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
        crossorigin="anonymous"></script>

<script>
    $(document).ready(function () {
        $('select').change(function () {
            // update the form action with the selected classid
            $('#formEnroll').attr('action', '/Home/EnrollInClass?classid=' + $(this).children('option:selected').val());
        })
    })
</script>

